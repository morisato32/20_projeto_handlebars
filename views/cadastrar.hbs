<section class="container">
   
    {{#if errors}}
         <ul class="alert alert-danger">
            {{#each errors}}
                <li style="list-style-type: none;"> {{this}}</li>
            {{/each}}
        </ul>
    {{/if}}
    
    <div class="row">
      
        <div class="grid-4 disappear"></div>

        <div class="grid-4 card-form">
            <h4 class="text-gradient">Cadastrar</h4>
            <form action="/user/cadastrar" method="post" enctype="multipart/form-data" class="mt-3">
                <div>
                    <label for="name">Nome:</label>
                    <input type="text" name="nome"  id="name"  class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="email">E-mail:</label>
                    <input type="email" name="email" id="email" class="mt-1" required>
                </div>

                <div class="mt-2">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha"  class="mt-1">
                </div>

                <div class="mt-2">
                <label for="confirmpassword">Confirmação de senha:</label>
                <input type="password" name="confirmpassword" id="confirmpassword" placeholder="Confirme a sua senha" required>
        </div>

                <div class="mt-2">
                    <label for="file" class="btn-secondary">imagem do perfil</label>
                    <input type="file" name="imagem" id="file">
                </div>

                
                <div class="mt-4">
                    <input type="submit" value="Cadastrar" class="btn-primary">
                </div>

                 <p>Já tem conta? <a href="/user/login" class="text-darkgreen mt-2">Clique aqui</a></p>
            </form>
        </div>

        <div class="grid-4 disappear"></div>
    </div>
   
</section>
